            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Home', user_path(current_user) , class: "glyphicon glyphicon-homes homes"%></li>
              <li><%= link_to 'Users', users_path , class: "glyphicon glyphicon-user users"%></li>
